@model UserManagement.Web.Models.Logs.LogsListItemViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Log Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserFullname)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId" target="_blank">
