            @Html.DisplayFor(model => model.Action)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActionedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActionedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ChangedValues)
        </dt>
        <dd class = "col-sm-10 alert alert-info">
            <b>@Html.DisplayFor(model => model.ChangedValues)</b>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Timestamp)
        </dt>
        <dd class = "col-sm-10">
